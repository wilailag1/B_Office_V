<!-- Page JS Plugins -->
<script src="/assets/js/plugins/select2/select2.full.min.js"></script>
<script>
  jQuery('.js-select2').select2();
</script>

<main id="main-container">
  <!-- Page Header -->
  <div class="content bg-gray-lighter">
    <div class="row items-push">
      <div class="col-sm-7">
        <h1 class="page-heading">
          <%= headTitle %>
        </h1>
      </div>
      <div class="col-sm-5 text-right hidden-xs">
        <ol class="breadcrumb push-10-t">
          <li>Cloud VDMS</li>
          <li>Administration</li>
          <li>Role</li>
          <li><a class="link-effect" href=""><%= headTitle %></a></li>
        </ol>
      </div>
    </div>
  </div>
  <!-- END Page Header -->

  <!-- Page Content -->
  <div class="content content-boxed">
    <div class="row">
      <div class="col-lg-12">
        <div class="block block-themed">
          <div class="block-header bg-primary-dark">
            <h3 class="block-title">Role info</h3>
          </div>
          <div class="block-content">
            <% if (lastError.length > 0) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h3 class="font-w300 push-15">Error</h3>
                <p><%= lastError %></p>
              </div>
            <% } %>
            <form class="js-validation-bootstrap form-horizontal" action="" method="post">
              <% if (roleData.roleId) { %>
              <div class="form-group">
                <label class="col-md-4 control-label" for="roleId">Role ID</label>
                <div class="col-md-7">
                  <input class="form-control" type="text" id="roleId" name="roleId"
                    value="<%= roleData.roleId %>" readonly
                  />
                </div>
              </div> 
              <% } %>
              <div class="form-group">
                <label class="col-md-4 control-label" for="name">Name <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input class="form-control" type="text" id="roleName" name="roleName" placeholder="Choose a nice name.."
                    value="<%= roleData.roleName %>"
                  />
                </div>
              </div>
              <!-- <div class="form-group">
                <label class="col-md-4 control-label" for="description">Description</label>
                <div class="col-md-7">
                  <textarea class="form-control" id="description" name="description" rows="4"><%= roleData.description %></textarea>
                </div>
              </div> -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="location">Permission <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <!-- <input class="form-control" type="text" id="location" name="location" placeholder=""
                    value="<%= roleData.rolePermissionJson %>" autocomplete="off"
                  /> -->
                  <label class="css-input css-checkbox css-checkbox-primary">
                    <input type="checkbox" name="admin" value="1" <%= roleData.admin && 'checked' %> /><span></span> Administrator
                  </label>
                  <br />
                  <label class="css-input css-checkbox css-checkbox-primary">
                    <input type="checkbox" name="vending" value="1" <%= roleData.vending && 'checked' %> /><span></span> Vending Machine Manager
                  </label>
                  <br />
                  <label class="css-input css-checkbox css-checkbox-primary">
                    <input type="checkbox" name="product" value="1" <%= roleData.product && 'checked' %> /><span></span> Product Manager
                  </label>
                  <br />
                  <label class="css-input css-checkbox css-checkbox-primary">
                    <input type="checkbox" name="saleReport" value="1" <%= roleData.saleReport && 'checked' %> /><span></span> Sale Report
                  </label>
                  <br />
                  <label class="css-input css-checkbox css-checkbox-primary">
                    <input type="checkbox" name="logs" value="1" <%= roleData.logs && 'checked' %> /><span></span> Log Monitor
                  </label>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                  <button class="btn btn-sm btn-primary" type="submit"><%= isEdit ? 'Save' : 'Add' %></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>