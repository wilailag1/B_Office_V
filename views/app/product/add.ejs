<!-- Page JS Plugins -->
<script src="/assets/js/plugins/select2/select2.full.min.js"></script>
<script>
  jQuery('.js-select2').select2();
</script>

<main id="main-container">
  <!-- Page Header -->
  <div class="content bg-gray-lighter">
    <div class="row items-push">
      <div class="col-sm-7">
        <h1 class="page-heading">
          <%= headTitle %>
        </h1>
      </div>
      <div class="col-sm-5 text-right hidden-xs">
        <ol class="breadcrumb push-10-t">
          <li>Cloud VDMS</li>
          <li>Product Management</li>
          <li><a
              class="link-effect"
              href=""
            >
              <%= headTitle %></a></li>
        </ol>
      </div>
    </div>
  </div>
  <!-- END Page Header -->

  <!-- Page Content -->
  <div class="content content-boxed">
    <div class="row">
      <div class="col-lg-12">
        <div class="block block-themed">
          <div class="block-header bg-primary-dark">
            <h3 class="block-title">
              <%= headTitle %>
            </h3>
          </div>
          <div class="block-content">
            <% if (lastError.length > 0) { %>
            <div class="alert alert-danger alert-dismissable">
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-hidden="true"
              >&times;</button>
              <h3 class="font-w300 push-15">Error</h3>
              <p>
                <%= lastError %>
              </p>
            </div>
            <% } %>
            <form
              class="js-validation-bootstrap form-horizontal"
              action=""
              method="post"
              enctype="multipart/form-data"
            >
              <% if (productData.productId) { %>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="productId"
                >Product ID</label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="text"
                    id="productId"
                    name="productId"
                    value="<%= productData.productId %>"
                    readonly
                  />
                </div>
              </div>
              <% } %>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="name"
                >Name <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Choose a product name.."
                    value="<%= productData.name %>"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="location"
                >Category <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="text"
                    id="group"
                    name="group"
                    placeholder="Ex.: Snack"
                    value="<%= productData.group %>"
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="price"
                >Price <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="number"
                    min="0"
                    id="price"
                    name="price"
                    placeholder=""
                    value="<%= productData.price %>"
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="stock"
                >Quantity <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="number"
                    min="0"
                    id="stock"
                    name="stock"
                    placeholder=""
                    value="<%= productData.stock || '0' %>"
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="chrow"
                >Row <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="number"
                    min="0"
                    id="chrow"
                    name="chrow"
                    placeholder=""
                    value="<%= productData.chrow || '0' %>"
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for="chcolumn"
                >Column <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input
                    class="form-control"
                    type="number"
                    min="0"
                    id="chcolumn"
                    name="chcolumn"
                    placeholder=""
                    value="<%= productData.chcolumn || '0' %>"
                    autocomplete="off"
                  />
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for=""
                >Product Image</label>
                <div class="col-md-7">
                  <img
                    src="<%= (productData.image && `/app/product/image/${productData.image}`) 
                  || 'assets/img/avatars/avatar1.jpg' %>"
                    style="max-height: 300px;"
                  />
                </div>
              </div>
              <div class="form-group">
                <label
                  class="col-md-4 control-label"
                  for=""
                ></label>
                <div class="col-md-7">
                  <input
                    type="file"
                    id="image"
                    name="image"
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                  <button
                    class="btn btn-sm btn-primary"
                    type="submit"
                  >
                    <%= isEdit ? 'Save' : 'Add' %></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>