<!-- Page JS Plugins -->
<script src="/assets/js/plugins/select2/select2.full.min.js"></script>
<script>
  jQuery('.js-select2').select2();
</script>

<main id="main-container">
  <!-- Page Header -->
  <div class="content bg-gray-lighter">
    <div class="row items-push">
      <div class="col-sm-7">
        <h1 class="page-heading">
          <%= headTitle %>
        </h1>
      </div>
      <div class="col-sm-5 text-right hidden-xs">
        <ol class="breadcrumb push-10-t">
          <li>Cloud VDMS</li>
          <li>Vending Machine</li>
          <li><a class="link-effect" href=""><%= headTitle %></a></li>
        </ol>
      </div>
    </div>
  </div>
  <!-- END Page Header -->

  <!-- Page Content -->
  <div class="content content-boxed">
    <div class="row">
      <div class="col-lg-12">
        <div class="block">
          <div class="block-header">
            <h3 class="block-title">Machine info</h3>
          </div>
          <div class="block-content">
            <% if (lastError.length > 0) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h3 class="font-w300 push-15">Error</h3>
                <p><%= lastError %></p>
              </div>
            <% } %>
            <form class="js-validation-bootstrap form-horizontal" action="" method="post">
              <% if (machineData.machineId) { %>
                <div class="form-group">
                  <label class="col-md-4 control-label" for="machineId">Machine ID</label>
                  <div class="col-md-7">
                    <input class="form-control" type="text" id="machineId" name="machineId"
                    value="<%= machineData.machineId %>" readonly
                    />
                  </div>
                </div>
              <% } %>
              <div class="form-group">
                <label class="col-md-4 control-label" for="name">Name <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input class="form-control" type="text" id="name" name="name" placeholder="Choose a nice name.."
                    value="<%= machineData.name %>"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-4 control-label" for="description">Description</label>
                <div class="col-md-7">
                  <textarea class="form-control" id="description" name="description" rows="4"><%= machineData.description %></textarea>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-4 control-label" for="location">Location <span class="text-danger">*</span></label>
                <div class="col-md-7">
                  <input class="form-control" type="text" id="location" name="location" placeholder="Machine location"
                    value="<%= machineData.location %>" autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-4 control-label" for="geoLocation">Geolocation</label>
                <div class="col-md-7">
                  <input class="form-control" type="text" id="geoLocation" name="geoLocation" placeholder="13.72341859,100.4762319"
                    value="<%= machineData.geoLocation %>" autocomplete="off"
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                  <button class="btn btn-sm btn-primary" type="submit"><%= isEdit ? 'Save' : 'Add' %></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>